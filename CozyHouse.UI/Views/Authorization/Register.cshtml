@model RegisterDTO
@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" href="~/css/authorization/authorization.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<div class="tabs">
    <a class="tab" asp-area="" asp-controller="Authorization" asp-action="Login">LOGIN</a>
    <a class="tab" asp-area="" asp-controller="Authorization" asp-action="Register">REGISTER</a>
</div>

<div class="form-container">
    <form method="post" asp-area="" asp-controller="Authorization" asp-action="RegisterCommand" class="form">
        <input type="text" placeholder="Login" asp-for="Login">
        <span asp-validation-for="Login" class="text-danger"></span>

        <input type="number" placeholder="Age (from 18)" asp-for="Age" min="0">
        <span asp-validation-for="Age" class="text-danger"></span>

        <input type="text" placeholder="Location" asp-for="Location">
        <span asp-validation-for="Location" class="text-danger"></span>

        <input placeholder="Phone number" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <input type="email" placeholder="E-mail" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <input type="password" placeholder="Password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <input type="password" placeholder="Confirm password" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <button type="submit">Register</button>
    </form>
</div>

<div class="google-btn">
    <i class="fab fa-google"></i>  Continue with  <b>Google</b>
</div>

<br />
<br />

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>